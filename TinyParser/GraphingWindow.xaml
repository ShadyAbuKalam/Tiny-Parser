<Window x:Class="TinyParser.GraphingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinyParser"
       mc:Ignorable="d"
        Title="GraphingWindow" Height="300" Width="600" WindowState="Maximized">
    
<Window.Resources>
        <DataTemplate DataType="{x:Type local:SyntaxNode}">
            <Border BorderBrush="Black" BorderThickness="1" Padding="0" CornerRadius="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Label}"/>
                    </StackPanel>
                </Border>
        </DataTemplate>
    </Window.Resources>

</Window>
